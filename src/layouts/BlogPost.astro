---
import BaseLayout from './BaseLayout.astro';
import Giscus from '../components/Giscus.astro';

interface Props {
  title: string;
  description?: string;
  pubDate: Date;
  enableComments?: boolean;
}

const { title, description, pubDate, enableComments = true } = Astro.props;
const formattedDate = new Date(pubDate).toLocaleDateString('en-us', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout title={title} description={description}>
  <article>
    <header>
      <h1>{title}</h1>
      <p style="color: #6b7280; font-size: 0.875rem; margin-top: 0.5rem;">
        Published on {formattedDate}
      </p>
    </header>
    <div class="content">
      <slot />
    </div>
  </article>
  
  {enableComments && (
    <Giscus 
      repo="pnave95/rickynaveblog"
      repoId="R_kgDOP5VVSQ"
      category="Announcements"
      categoryId="DIC_kwDOP5VVSc4CwC7e"
    />
  )}
</BaseLayout>

<style>
  article header {
    margin-bottom: 2rem;
  }

  article header h1 {
    margin-top: 0;
    font-size: 2.5rem;
  }

  .content {
    font-size: 1.125rem;
  }

  .content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 0.5rem;
    margin: 1.5rem 0;
  }

  .content :global(blockquote) {
    border-left: 4px solid #e5e7eb;
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: #6b7280;
  }
</style>
